{% extends 'medecin_template.html.twig' %}

{% block title %} AlloDocteur - Diagnostics {% endblock %}

{% block body %}

  <div class="main-panel">
  <div class="content-wrapper">
    <div class="row">
      <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Liste des Diagnostics Ã©tablis</h4>
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                <tr>
                  <th>Diagnostics</th>
                  <th>Patient</th>
                  <th>Personnel</th>
                  <th>Date creation</th>
                  <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for diagnostic in diagnostics %}
                  <tr>
                    <td>{{ diagnostic.nomDiagnostic }}</td>
                    <td>{{ diagnostic.patient }}</td>
                    <td>{{ diagnostic.personnel }}</td>
                    <td>{{ diagnostic.dateCreation|date('Y-m-d') }}</td>
                    <td>
                      <a href="{{ path("diagnostic_detail", {id: diagnostic.id}) }}" class="btn btn-primary">Voir</a>
                      <a href="{{ path("editer_diagnostic", {id: diagnostic.id}) }}" class="btn btn-primary">Modifier</a>
                      <a href="{{ path("delete_diagnostic", {id: diagnostic.id}) }}" class="btn btn-primary">Supprimer</a>
                    </td>
                  </tr>
                {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}