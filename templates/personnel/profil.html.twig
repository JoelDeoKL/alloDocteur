{% extends 'medecin_template.html.twig' %}

{% block title %} AlloDocteur - Profil {% endblock %}

{% block body %}

      <!-- partial -->
      <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">
            <div class="col-sm-12">
              <div class="home-tab">
                <div class="d-sm-flex align-items-center justify-content-between border-bottom">
                  <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item">
                      <a class="nav-link active ps-0" id="home-tab" data-bs-toggle="tab" href="#overview" role="tab" aria-controls="overview" aria-selected="true">Mon Profil</a>
                    </li>
                  </ul>
                </div>
                <div class="tab-content tab-content-basic">
                  <div class="tab-pane fade show active" id="overview" role="tabpanel" aria-labelledby="overview"> 
                    <div class="row">
                      <div class="col-sm-12">
                        <div class="statistics-details d-flex align-items-center justify-content-between">
                          <div>
                            <p class="statistics-title">Mes Examens</p>
                            <h3 class="rate-percentage">{{ examen }}</h3>
                          </div>
                          <div>
                            <p class="statistics-title">Mes Diagnostics</p>
                            <h3 class="rate-percentage">{{ diagnostic }}</h3>
                          </div>
                          <div>
                            <p class="statistics-title">Mes Ordonnances</p>
                            <h3 class="rate-percentage">{{ ordonnance }}</h3>
                          </div>
                          <div class="d-none d-md-block">
                            <p class="statistics-title">Mes Signals</p>
                            <h3 class="rate-percentage">{{ signal }}</h3>
                          </div>
                        </div>
                      </div>
                    </div> 
                    <div class="row">
                      <div class="col-lg-8 d-flex flex-column">
                        <div class="row flex-grow">
                          <div class="col-12 grid-margin stretch-card">
                            <div class="card card-rounded">
                              <div class="card-body">
                                <h5>Nom : {{ patient[0].nomPatient  }}</h5><br>
                                <h5>Post-Nom :{{ patient[0].postnomPatient }}</h5><br>
                                <h5>Prénom : {{ patient[0].prenomPatient }}</h5><br>
                                <h5>Adresse Email : {{ patient[0].email }}</h5><br>
                                <h5>Numéro Téléphone : {{ patient[0].telephone }}</h5><br>
                                <h5>Age : {{ patient[0].age }}</h5><br>
                                <h5>Matricule : {{ patient[0].matricule }}</h5><br>
                                <h5>Médecin Traitant : {{ patient[0].personnel }}</h5><br>
                                <h5>Date de création : {{ patient[0].dateCreation|date('Y-m-d') }}</h5>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- content-wrapper ends -->
        <!-- partial:partials/_footer.html -->
        <!-- partial -->
      </div>
{% endblock %}