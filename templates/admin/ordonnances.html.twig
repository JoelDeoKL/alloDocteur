{% extends 'admin_template.html.twig' %}

{% block title %} AlloDocteur - Ordonnances {% endblock %}

{% block body %}

  <div class="main-panel">
  <div class="content-wrapper">
    <div class="row">
      <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Liste de toutes les ordonnances</h4>
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                <tr>
                  <th>Patient</th>
                  <th>Personnel</th>
                  <th>Ordonnance</th>
                  <th>Date cr√©ation</th>
                  <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for ordonnance in ordonnances %}
                  <tr>
                    <td>{{ ordonnance.patient }}</td>
                    <td>{{ ordonnance.personnel }}</td>
                    <td>{{ ordonnance.ordonnance }}</td>
                    <td>{{ ordonnance.date_orodannance|date('Y-m-d') }}</td>
                    <td>
                      <a href="" class="btn btn-primary">Voir</a>
                      <a href="{{ path("editer_ordonnance", {id: ordonnance.id}) }}" class="btn btn-primary">Modifier</a>
                      <a href="" class="btn btn-primary">Supprimer</a>
                    </td>
                  </tr>
                {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}